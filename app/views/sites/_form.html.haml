= form_for @site do |f|
  -if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :short_path
    = f.text_field :short_path
  .field
    = f.label :destination
    = f.text_field :destination
  .field
    = f.label :count
    = f.number_field :count
  .actions
    = f.submit 'Save'
